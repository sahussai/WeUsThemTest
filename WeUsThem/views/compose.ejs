<form action="/email/sendEmail" method="POST">
    To: <input type="text" name="sentTo"><br>
    Subject: <input type="text" name="title"><br>
    Message: <textarea rows="10" cols="100" name="emailBody"></textarea><br>
    <input type="hidden" name="sender" value="currentUser">
    <input type="submit" value="Submit">
  </form>


</body>

</html>